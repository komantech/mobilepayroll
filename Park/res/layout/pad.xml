<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="1.0">

    <TextView
        android:id="@+id/pad_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:layout_marginBottom="5dp"
        android:paddingRight="5dp"
        android:gravity="center_vertical|right"
        android:textSize="30dp"
        android:background="#FFFFFF"
        android:hint="Enter ID"
        android:text="" />
    
    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_weight="0.8"
    	android:weightSum="1.0">
    	
    	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	    android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:layout_weight="0.25">
    	    
    	    <Button android:id="@+id/pad_1"
    	    	android:layout_width="wrap_content"
    	    	android:layout_height="fill_parent"
    	    	android:layout_weight="1.0"
    	    	android:textSize="25dp"
    	    	android:text="1"
    	    	android:onClick="padClick" />
    	    
    	    <Button android:id="@+id/pad_2"
    	    	android:layout_width="wrap_content"
    	    	android:layout_height="fill_parent"
    	    	android:layout_weight="1.0"
    	    	android:textSize="25dp"
    	    	android:text="2"
    	    	android:onClick="padClick" />
    	    
    	    <Button android:id="@+id/pad_3"
    	    	android:layout_width="wrap_content"
    	    	android:layout_height="fill_parent"
    	    	android:layout_weight="1.0"
    	    	android:textSize="25dp"
    	    	android:text="3"
    	    	android:onClick="padClick" />
    	    
    	</LinearLayout>
    	
    	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	    android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:layout_weight="0.25">
    	    
    	    <Button android:id="@+id/pad_4"
    	    	android:layout_width="wrap_content"
    	    	android:layout_height="fill_parent"
    	    	android:layout_weight="1.0"
    	    	android:textSize="25dp"
    	    	android:text="4"
    	    	android:onClick="padClick" />
    	    
    	    <Button android:id="@+id/pad_5"
    	    	android:layout_width="wrap_content"
    	    	android:layout_height="fill_parent"
    	    	android:layout_weight="1.0"
    	    	android:textSize="25dp"
    	    	android:text="5"
    	    	android:onClick="padClick" />
    	    
    	    <Button android:id="@+id/pad_6"
    	    	android:layout_width="wrap_content"
    	    	android:layout_height="fill_parent"
    	    	android:layout_weight="1.0"
    	    	android:textSize="25dp"
    	    	android:text="6"
    	    	android:onClick="padClick" />
    	    
    	</LinearLayout>
    	
    	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	    android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:layout_weight="0.25">
    	    
    	    <Button android:id="@+id/pad_7"
    	    	android:layout_width="wrap_content"
    	    	android:layout_height="fill_parent"
    	    	android:layout_weight="1.0"
    	    	android:textSize="25dp"
    	    	android:text="7"
    	    	android:onClick="padClick" />
    	    
    	    <Button android:id="@+id/pad_8"
    	    	android:layout_width="wrap_content"
    	    	android:layout_height="fill_parent"
    	    	android:layout_weight="1.0"
    	    	android:textSize="25dp"
    	    	android:text="8"
    	    	android:onClick="padClick" />
    	    
    	    <Button android:id="@+id/pad_9"
    	    	android:layout_width="wrap_content"
    	    	android:layout_height="fill_parent"
    	    	android:layout_weight="1.0"
    	    	android:textSize="25dp"
    	    	android:text="9"
    	    	android:onClick="padClick" />
    	    
    	</LinearLayout>
    	
    	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	    android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:layout_weight="0.25">
    	    
    	    <Button android:id="@+id/pad_back"
    	    	android:layout_width="wrap_content"
    	    	android:layout_height="fill_parent"
    	    	android:layout_weight="1.0"
    	    	android:textSize="25dp"
    	    	android:text="B"
    	    	android:onClick="padClick" />
    	    
    	    <Button android:id="@+id/pad_0"
    	    	android:layout_width="wrap_content"
    	    	android:layout_height="fill_parent"
    	    	android:layout_weight="1.0"
    	    	android:textSize="25dp"
    	    	android:text="0"
    	    	android:onClick="padClick" />
    	    
    	    <Button android:id="@+id/pad_clear"
    	    	android:layout_width="wrap_content"
    	    	android:layout_height="fill_parent"
    	    	android:layout_weight="1.0"
    	    	android:textSize="25dp"
    	    	android:text="C"
    	    	android:onClick="padClick" />
    	    
    	</LinearLayout>

    </TableLayout>
    
    <Button android:id="@+id/pad_done"
   		android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_weight="0.1"
    	android:textSize="25dp"
    	android:text="Done"
    	android:onClick="padClick" />
    
</LinearLayout>