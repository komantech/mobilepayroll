<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#FF5555"
                android:endColor="#FF2222"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#AAAAAA" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="25dp"
                android:right="10dp"
                android:bottom="25dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:startColor="#FF5555"
                android:endColor="#FF2222"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#AAAAAA" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="25dp"
                android:right="10dp"
                android:bottom="25dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:startColor="#8888FF"
                android:endColor="#4444FF"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#AAAAAA" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="25dp"
                android:right="10dp"
                android:bottom="25dp" />
        </shape>
    </item>
    
</selector>
